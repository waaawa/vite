{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@common": ["src/common/index"],
      "@common/*": ["src/common/*"],
      "@types": ["src/types/index"],
      "@types/*": ["src/types/*"],
      "@components": ["src/components/index"],
      "@components/*": ["src/components/*"],
      "@icons": ["src/components/_icons/index"],
      "@icons/*": ["src/components/_icons/*"],
      "@animations": ["src/components/_animations/index"],
      "@animations/*": ["src/components/_animations/*"],
      "@style": ["src/style/index"],
      "@style/*": ["src/style/*"],
      "@views": ["src/views/index"],
      "@views/*": ["src/views/*"],
      "@router": ["src/router/index"],
      "@router/*": ["src/router/*"],
      "@store": ["src/store/index"],
      "@store/*": ["src/store/*"],
      "@assets": ["src/assets/index"],
      "@assets/*": ["src/assets/*"],
      "@state": ["src/state/index"],
      "@state/*": ["src/state/*"],
      "@utils": ["src/utils/index"],
      "@utils/*": ["src/utils/*"]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "src/**/*.d.ts",
  ],
  "exclude": ["node_modules"]
}
